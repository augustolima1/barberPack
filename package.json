    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.1.2",
    "express": "^4.17.1",
    "knex": "^0.21.1",
    "moment": "^2.25.3",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
